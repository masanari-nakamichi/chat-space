.side
  .side__header
    .side__header__box
      %p.side__header__box__username
        = current_user.name
      %ul.side__header__box__images
        %li.side__header__box__images__new
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.side__header__box__images__new 
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side__group   
    - current_user.groups.each do |group|
      = link_to group_messages_path(group),class:"side__group__list" do
        .side__group__list__name
          = group.name
        .side__group__list__message
          = group.show_last_message
