.message{data: {message: {id: message.id}}}
  .main__posted__user
    .main__posted__user__name
      = message.user.name
    .main__posted__user__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__posted__content
    - if message.content.present?
      %p.main__posted__content__item
        = message.content
    = image_tag message.image.url, class: 'main__posted__content__image' if message.image.present?